<div class="view_box" id="new_unit">

<% form_for(@unit) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, "Full Name of New Unit" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :abbrev, "Abbreviation for New Unit" %><br />
    <%= f.text_field :abbrev %>
  </p>
  <p>
    <%= f.label :attr_type_id, "Specify New Unit's Type" %><br />

    <%= f.collection_select :attr_type_id,
      AttrType.find(:all),
      :id, :name,
      :prompt => "Select a Type"
    %>
  </p>
  <p>
    <%= f.label :system, "Specify System of Measurement" %><br />
    <%= f.select(:system, ["Metric", "Imperial", "other"]) %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', units_path %>
</div>